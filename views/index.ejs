<!DOCTYPE html>
<html>
  <head>
    <title>WHAAAAAAAAAAAAAAAAAAT</title>
    <link rel="stylesheet" href="/stylesheets/datepicker.css" />
  </head>

  <body>
    <%- include ('./partials/header.ejs') %>
    <div class="container">
      <!--       content goes here -->
      <div class="row mt-5">
        <div class="col-sm-8 offset-2">
          <form
            name="newConnectionForm"
            class="mt-3"
            method="POST"
            action="/ibm"
          >
            <div class="form-group row pb-2">
              <label for="topic" class="col-sm-2 col-form-label">Topic</label>
              <div class="col-sm-10">
                <input
                  type="text"
                  class="form-control"
                  id="topic"
                  name="topic"
                  placeholder="topic"
                />
              </div>
            </div>
            <div class="form-group row pb-2">
              <label for="title" class="col-sm-2 col-form-label">Title</label>
              <div class="col-sm-10">
                <input
                  type="text"
                  class="form-control"
                  id="title"
                  name="title"
                  placeholder="title"
                />
              </div>
            </div>
            <div class="form-group row pb-2">
              <label for="detail" class="col-sm-2 col-form-label"
                >Details</label
              >
              <div class="col-sm-10">
                <textarea
                  rows="5"
                  class="form-control"
                  id="detail"
                  name="details"
                  placeholder="description"
                ></textarea>
              </div>
            </div>
            <div class="form-group row pb-2">
              <label for="where" class="col-sm-2 col-form-label">Where</label>
              <div class="col-sm-10">
                <input
                  type="text"
                  class="form-control"
                  id="where"
                  name="location"
                  placeholder="location"
                />
              </div>
            </div>

            <div class="form-group row pb-2">
              <label for="when" class="col-sm-2 col-form-label">When</label>
              <div class="col-sm-10">
                <input
                  type="date"
                  class="form-control"
                  id="when"
                  name="date"
                  min="2020-01-04"
                  max="2022-12-31"
                />
              </div>
            </div>
            <div class="form-group row pb-2">
              <label for="when" class="col-sm-2 col-form-label">Start</label>
              <div class="col-sm-10">
                <input
                  type="time"
                  id="start"
                  name="startTime"
                  min="00:00"
                  max="23:59"
                  value="00:00"
                  class="form-control"
                  style="width: 125px"
                  required
                />
              </div>
            </div>
            <div class="form-group row pb-2">
              <label for="when" class="col-sm-2 col-form-label">End</label>
              <div class="col-sm-10">
                <input
                  type="time"
                  id="end"
                  name="endTime"
                  min="00:00"
                  max="23:59"
                  value="23:59"
                  class="form-control"
                  style="width: 125px"
                  required
                />
              </div>
            </div>

            <div class="form-group row pb-2">
              <label for="imageURL" class="col-sm-2 col-form-label"
                >Image URL</label
              >
              <div class="col-sm-10">
                <input
                  type="text"
                  class="form-control"
                  id="imageURL"
                  name="imageURL"
                  placeholder="imageURL"
                />
              </div>
            </div>

            <button type="submit" class="btn btn-primary-bordered fr">
              Create Connection
            </button>
          </form>
        </div>
      </div>
    </div>

    <%- include ('./partials/footer.ejs') %>
  </body>
</html>
